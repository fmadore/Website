{
	"name": "frederick-madore-website",
	"private": true,
	"version": "2.0.0",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"test": "playwright test",
		"test:ui": "playwright test --ui",
		"build:pwa": "npm run build && npm run pwa:validate",
		"pwa:validate": "echo 'âœ… PWA built successfully - check Lighthouse for PWA score'",
		"serve:https": "npx serve build -l 8080 --ssl-cert localhost.pem --ssl-key localhost-key.pem"
	},
	"devDependencies": {
		"@csstools/postcss-global-data": "^4.0.0",
		"@eslint/compat": "^2.0.1",
		"@eslint/js": "^9.39.2",
		"@playwright/test": "^1.58.2",
		"@sveltejs/adapter-static": "^3.0.10",
		"@sveltejs/kit": "^2.50.2",
		"@sveltejs/vite-plugin-svelte": "^6.2.4",
		"@types/node": "^25.2.3",
		"eslint": "^9.39.2",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-svelte": "^3.15.0",
		"globals": "^17.1.0",
		"mdsvex": "^0.12.6",
		"postcss": "^8.5.6",
		"postcss-custom-media": "^12.0.0",
		"prettier": "^3.8.1",
		"prettier-plugin-svelte": "^3.4.1",
		"svelte": "^5.48.2",
		"svelte-check": "^4.4.0",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.56.0",
		"vite": "^7.3.1"
	},
	"overrides": {
		"js-yaml": ">=4.1.1",
		"devalue": ">=5.6.2",
		"echarts-wordcloud": {
			"echarts": "$echarts"
		}
	},
	"dependencies": {
		"@fortawesome/free-solid-svg-icons": "^7.1.0",
		"@iconify-icons/academicons": "^1.2.10",
		"@iconify-icons/lucide": "^1.2.135",
		"@iconify-icons/mdi": "^1.2.48",
		"@iconify-icons/simple-icons": "^1.2.74",
		"@iconify/svelte": "^5.2.1",
		"@types/d3": "^7.4.3",
		"d3": "^7.9.0",
		"echarts": "^6.0.0",
		"echarts-wordcloud": "^2.1.0",
		"html2canvas": "^1.4.1",
		"jspdf": "^4.1.0",
		"maplibre-gl": "^5.16.0",
		"svelte-fa": "^4.0.4"
	}
}
