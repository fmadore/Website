{
	"name": "frederick-madore-website",
	"private": true,
	"version": "2.0.0",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"test": "playwright test",
		"test:ui": "playwright test --ui",
		"build:pwa": "npm run build && npm run pwa:validate",
		"pwa:validate": "echo 'âœ… PWA built successfully - check Lighthouse for PWA score'",
		"serve:https": "npx serve build -l 8080 --ssl-cert localhost.pem --ssl-key localhost-key.pem"
	},
	"devDependencies": {
		"@eslint/compat": "^1.3.2",
		"@eslint/js": "^9.35.0",
		"@playwright/test": "^1.55.0",
		"@sveltejs/adapter-static": "^3.0.9",
		"@sveltejs/kit": "^2.39.0",
		"@sveltejs/vite-plugin-svelte": "^6.2.0",
		"@types/leaflet": "^1.9.20",
		"@types/node": "^24.3.1",
		"eslint": "^9.35.0",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-svelte": "^3.12.3",
		"globals": "^16.4.0",
		"leaflet": "^1.9.4",
		"mdsvex": "^0.12.6",
		"prettier": "^3.6.2",
		"prettier-plugin-svelte": "^3.4.0",
		"svelte": "^5.38.10",
		"svelte-check": "^4.3.1",
		"typescript": "^5.9.2",
		"typescript-eslint": "^8.43.0",
		"vite": "^7.1.5"
	},
	"dependencies": {
		"@fortawesome/free-solid-svg-icons": "^7.0.1",
		"@iconify/svelte": "^5.0.1",
		"@types/leaflet.markercluster": "^1.5.6",
		"date-fns": "^4.1.0",
		"echarts": "^6.0.0",
		"leaflet.markercluster": "^1.5.3",
		"svelte-fa": "^4.0.4"
	}
}
